	gr.initialize();
	gr.short_description = 'Software for ' + current.parent.short_description + ' (' +current.parent.number + ')';
	gr.u_description_html = 'Software required for ' + current.parent.short_description + ' (' +current.parent.number + ')/n' + current.parent.u_description_html ;
