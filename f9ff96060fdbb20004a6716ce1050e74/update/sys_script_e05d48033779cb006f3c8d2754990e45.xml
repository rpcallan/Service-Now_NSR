	gr.parent_task = current.sys_id;
	gr.requested_by = current.parent.requested_by;
	gr.company = current.parent.company;
	gr.region = current.parent.region;
	gr.project_no = current.parent.project_no;
	gr.project_name = current.parent.project_name;
	gr.assigned_to = current.parent.assigned_to;
	gr.install_qty = current.parent.install_qty;
	gr.install_for = current.parent.install_for;
	gr.justification = current.parent.justification;
	
	current.software_request = gr.insert();
	current.software_request_status = -7;
	current.update();
	
})(current, previous);]]></script>
